<?xml version="1.0"  encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="default">
        <class>sn.dev.gestion_location_immeubles.DAO.Contratsdelocations</class>
        <class>sn.dev.gestion_location_immeubles.DAO.Immeubles</class>
        <class>sn.dev.gestion_location_immeubles.DAO.Offres</class>
        <class>sn.dev.gestion_location_immeubles.DAO.Paiements</class>
        <class>sn.dev.gestion_location_immeubles.DAO.Unitesdelocations</class>
        <class>sn.dev.gestion_location_immeubles.DAO.Utilisateurs</class>
        <class>sn.dev.gestion_location_immeubles.DAO.Demandes</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/gestion_location_immeubles"/>
            <property name="hibernate.connection.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.user" value="root"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
        </properties>

    </persistence-unit>
</persistence>